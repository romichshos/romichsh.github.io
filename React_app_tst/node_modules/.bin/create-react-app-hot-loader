#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../create-react-app-hot-loader/bin/create-react-app-hot-loader.js" "$@"
  ret=$?
else 
  node  "$basedir/../create-react-app-hot-loader/bin/create-react-app-hot-loader.js" "$@"
  ret=$?
fi
exit $ret
